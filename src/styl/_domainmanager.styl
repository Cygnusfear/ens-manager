
.domain-manager
  display flex
  margin-top 80px


.search-name
  width auto
  margin-top 10px
  .owner
    float left
  input
    margin 0
    margin-left 20px
    float left
    width auto
    &.has-owner
      border-radius 5px 0 0 5px
  button
    float left
    background $medBlue
    width auto
    transition 0.2s
    &:hover
      background $medBlueHigh

/* Node info */

.node-info
  height 100%
  padding 20px
  background #f1f1f1
  width 40%
  position fixed
  z-index 1

.tabs
  display flex
.tab
  color white
  font-weight 300
  font-size 20px
  width 50%
  background $medBlue
  opacity 0.7
  padding 10px 0
  text-align center
  margin 0
  transition 0.2s
  &:first-child
    border-radius 5px 0 0 0
  &:last-child
    border-radius 0 5px 0 0
  &.current
    background $medBlue
    opacity 1
  &:hover
    cursor pointer
    opacity 1

.info-container
  clearfix()
  margin-bottom 10px

.info
  background transparent
  padding 14px 15px 5px
  height 50px
  white-space nowrap
  background white
  overflow hidden
  text-overflow ellipsis
  border-bottom solid 1px $medBlue
  border-right solid 1px $medBlue
  border-left solid 1px $medBlue
  width 100%

  strong
    font-weight 300

  &:last-child
    border-radius 0 0 5px 5px
