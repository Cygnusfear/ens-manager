.header
  clearfix()
  background linear-gradient(to right, #2b306d 1%,#4a66ba 100%)
  position fixed
  top 0
  left 0
  height 80px
  width 100%
  padding 10px 20px
  z-index 100

h1
  margin-top 5px
  margin-bottom 0
  float left
  color white
  font-weight 300
  +bp($width-xs)
    width 100%
    text-align center

.nav
  float right
  +bp($width-xs)
    width 100%
  ul
    padding 0
    +bp($width-xs)
      text-align center

  li
    display inline-block
    transition 0.2s
    border-bottom 2px solid transparent

  a
    color $lightestBlue
    margin 0 20px
    padding-bottom 10px
    text-decoration none
    transition 0.2s
    &:hover
    &.current
      border-bottom 2px solid white
      color white
